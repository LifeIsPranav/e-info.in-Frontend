# Frontend Environment Variables

# API Configuration
VITE_API_BASE_URL=http://localhost:5000/api

# App Configuration  
VITE_APP_NAME="Digital Profile App"
VITE_APP_VERSION=1.0.0

# External Services (Optional)
VITE_ANALYTICS_ID=your-analytics-id
VITE_SENTRY_DSN=your-sentry-dsn

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_SEARCH=true
VITE_ENABLE_FILE_UPLOAD=true

# File Upload Configuration
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# Social Media Links (for footer/about)
VITE_COMPANY_TWITTER=https://twitter.com/yourcompany
VITE_COMPANY_GITHUB=https://github.com/yourcompany
VITE_SUPPORT_EMAIL=support@yourapp.com
